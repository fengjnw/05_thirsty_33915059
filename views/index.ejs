<!doctype html>
<html>

<head>
    <title>
        <%=shop_name%>
    </title>
    <link rel="stylesheet" href="/styles.css">
</head>

<body>
    <%- include('partials/header') %>

        <div class="container">
            <h1>Welcome to <%=shop_name%> Shop</h1>
            <h2>Here are some things that we sell:</h2>
            <ul>
                <% for(let i=0; i < product_categories.length; i++) { %>
                    <li>
                        <%= product_categories[i] %>
                    </li>
                    <% } %>
            </ul>
        </div>
</body>

</html>